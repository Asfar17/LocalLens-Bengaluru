{
  "name": "bangalore-survival-assistant",
  "version": "1.0.0",
  "description": "Context-aware AI assistant for Bangalore city guide",
  "private": true,
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:client\" \"npm run dev:server\"",
    "dev:client": "npm run dev --workspace=client",
    "dev:server": "npm run dev --workspace=server",
    "build": "npm run build --workspace=client",
    "build:full": "npm run build --workspace=client && npm run build --workspace=server",
    "start": "npm run start --workspace=server",
    "lint": "eslint . --ext .ts,.tsx"
  },
  "dependencies": {
    "@google-cloud/speech": "^7.2.1",
    "@google-cloud/translate": "^9.3.0",
    "@google-cloud/vision": "^5.3.4",
    "@googlemaps/google-maps-services-js": "^3.4.2",
    "@vercel/node": "^5.5.16",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.18.3",
    "mongoose": "^8.2.1",
    "multer": "^2.0.2",
    "openai": "^6.15.0",
    "tesseract.js": "^7.0.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/multer": "^2.0.0",
    "@types/node": "^20.11.25",
    "@typescript-eslint/eslint-plugin": "^8.50.1",
    "@typescript-eslint/parser": "^8.50.1",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "prettier": "^3.2.5",
    "typescript": "^5.4.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
